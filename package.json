{
  "name": "clean-my-mac",
  "version": "0.1.0",
  "description": "Safe disk cleanup analysis and tooling for macOS",
  "license": "MIT",
  "author": "Oleksii Honchar <tuiteraz@gmail.com>",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "npm run clean:dist && npm run ts:build",
    "clean": "rm -rf dist && rm -rf node_modules",
    "clean:dist": "rm -rf dist",
    "dev": "dotenvx run -- node -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "start": "npm run build && dotenvx run -- node dist/src/index.js",
    "lint:check": "ESLINT_USE_FLAT_CONFIG=true eslint --config ./eslint.config.js --cache . --max-warnings 0",
    "lint:fix": "npm run lint:check -- --fix",
    "prettier:check": "prettier --check \"{src,test}/**/*.{ts,js,json,md}\"",
    "prettier:write": "prettier --write \"{src,test}/**/*.{ts,js,json,md}\"",
    "ts:build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "ts:check": "npm run ts:compile",
    "ts:compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@dotenvx/dotenvx": "^1.51.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "engines": {
    "node": "^24"
  }
}