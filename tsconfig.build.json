{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "package.json": [
        "./package.json"
      ],
      "@types/*": [
        "./src/types/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./docs",
    "./coverage",
    "./ops",
    "./scripts",
    "**/*.test.ts",
    "**/__tests__/**/*"
  ]
}